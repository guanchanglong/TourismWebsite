<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xupt.demo1.dao.HotelDao">

    <select id="findAll" resultType="com.xupt.demo1.entity.Hotel">
        select * from t_hotel
    </select>

    <select id="findAllByName" resultType="com.xupt.demo1.entity.Hotel">
        select * from t_hotel where name like #{hotelName}
    </select>

</mapper>